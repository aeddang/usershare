<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
             android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent">

    </FrameLayout>

    <com.kakaovx.homet.lib.page.PageGestureView
            android:id="@+id/gestureView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                    android:id="@+id/contents"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#f00">
                <com.kakaovx.homet.user.component.ui.view.player.VXplayer
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_marginBottom="300dp"
                        android:id="@+id/player"/>
                <TextView
                            android:id="@+id/txtMessage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Fragment A"
                            android:textSize="15sp" />

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" app:srcCompat="@mipmap/ic_launcher"
                        android:id="@+id/image" android:layout_marginBottom="300dp"/>

            </FrameLayout>
    </com.kakaovx.homet.lib.page.PageGestureView>

    <FrameLayout
            android:id="@+id/divided"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#f00" android:layout_gravity="bottom">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView
                        android:text="sdsasdsdsadsadsdsadsadsadsadsadsadsadsadsadsadsadsadsadsadsadsadsadsadssdsasdsdsadsadsdsadsadsadsadsadsadsadsadsadsadsadsadsadsadsadsadsadsadssdsasdsdsadsadsdsadsadsadsadsadsadsadsadsadsadsadsadsadsadsadsadsadsadssdsasdsdsadsadsdsadsadsadsadsadsadsadsadsadsadsadsadsadsadsadsadsadsads"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView2"
                        android:textSize="36sp"/>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</FrameLayout>
