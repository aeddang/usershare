<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/home_trainer_layout"
        android:layout_width="274dp"
        android:layout_height="96dp">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

            <ImageView
                    android:id="@+id/home_trainer_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/kakaovx_muzi_profile_000"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                    android:id="@+id/home_trainer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#1e1e1e"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="2sp"
                    tools:text="김홈트 트레이너"
                    app:layout_constraintStart_toEndOf="@id/home_trainer_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/home_trainer_description"/>

            <TextView
                    android:id="@+id/home_trainer_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#1e1e1e"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="4sp"
                    tools:text="#체형교정, 홈트레이닝 전문가"
                    app:layout_constraintTop_toBottomOf="@id/home_trainer_name"
                    app:layout_constraintStart_toEndOf="@id/home_trainer_image"/>

            <TextView
                    android:id="@+id/home_trainer_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#939393"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="4sp"
                    tools:text="생활체육지도자 3급"
                    app:layout_constraintStart_toEndOf="@id/home_trainer_image"
                    app:layout_constraintTop_toBottomOf="@id/home_trainer_description"
                    app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>