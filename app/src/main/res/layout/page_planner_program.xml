<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/program_ImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/program_title_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="요가여신 황아영의 다이어트 요가"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/program_times_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/program_title_textView"
            app:layout_constraintTop_toTopOf="@+id/program_title_textView"
            app:layout_constraintRight_toLeftOf="@+id/program_list_button"
            android:text="(1회/30회)"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/program_list_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/program_title_textView"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/program_type_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/program_info_textView"
            app:layout_constraintBottom_toTopOf="@+id/program_info_textView"
            app:layout_constraintRight_toRightOf="parent"
            android:text="기초체력 강화운동"
            android:layout_marginBottom="10dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/program_info_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="초급 | 30분 | 코어 | 205kcal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>