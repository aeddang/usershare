<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/colorAccent">
    <com.kakao.usermgmt.LoginButton
            android:id="@+id/btnKakao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"/>
    <com.facebook.login.widget.LoginButton
            android:id="@+id/btnFaceBook"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/bar_height" android:layout_margin="10dp"/>
    <Button
            android:text="Logout"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:id="@+id/btnLogout" android:layout_margin="10dp"
            style="@style/Widget.AppCompat.Button"/>
</LinearLayout>