<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_view_height">

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/landscapeListLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_view_height">

        <TextView
                android:id="@+id/landscapeListTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/landscape_list_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/landscapeListSubTitle"/>

        <TextView
                android:id="@+id/landscapeListSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/landscape_list_sub_title"
                app:layout_constraintTop_toBottomOf="@id/landscapeListTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/componentList"/>

        <com.kakaovx.homet.user.component.ui.view.recyclerView.CardViewRecyclerView
                android:id="@+id/componentList"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/landscapeListSubTitle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>